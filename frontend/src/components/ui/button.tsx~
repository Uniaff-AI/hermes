'use client';

import React, { FC } from 'react';

type Offer = {
    id: number;
    title: string;
    group: string;
    clicks: number;
    leads: number;
    sales: number;
    cr: string;
    epc: string;
    status: string;
};

type OffersTableProps = {
    searchQuery: string;
};

const mockOffers: Offer[] = [
    {
        id: 4481,
        title: '[SPACE-16] (LR-GOVP)',
        group: 'IN Proman HP',
        clicks: 0,
        leads: 0,
