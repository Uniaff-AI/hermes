generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Rule {
  id              String   @id @default(cuid())
  name            String
  offerId         String
  offerName       String
  periodMinutes   Int
  minInterval     Int
  maxInterval     Int
  dailyLimit      Int
  sendWindowStart String   // "HH:MM"
  sendWindowEnd   String   // "HH:MM"
  isActive        Boolean  @default(true)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@map("rules")
}

model Lead {
  id        String   @id @default(cuid())
  name      String
  email     String
  phone     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("leads")
}

model Offer {
  id        String   @id @default(cuid())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("offers")
}